{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noImplicitAny": false,   // Allows implicit `any` types
    "strictNullChecks": false,  // Disables strict null checks
    "strict": false,            // Disables all strict type checks
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
